<h3 class="header">Nowa aktywność</h3>
<hr>

<div id="error_explanation">
  <ul>
    <% @activity.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>

<%= form_for @activity do |f| %>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label 'Adres początkowy' %>
      <%= f.text_area :start_address, placeholder: 'Ulica, Miejscowość, Kraj' ,class: 'form-control' %>
    </div>
    <div class="form-group col-md-12">r
      <%= f.label 'Adres końcowy' %>
      <%= f.text_area :end_address, placeholder: 'Ulica, Miejscowość, Kraj', class: 'form-control' %>
    </div>
  </div>
  <p><%= f.submit "Wyślij", class: 'btn btn-info' %></p>
<% end %>
